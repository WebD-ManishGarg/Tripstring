<% include ./partials/header %>
<link rel="stylesheet" href="/css/form.css">

    <div class="container" id="form">
       <h1 class="center">Select your own package</h1>

           <form action="/form" method="POST">
             <h3>   <i class="material-icons prefix medium">account_circle</i>  Name</h3>
             <div class="form-row">
               <div class="col">
               <input type="text" class="form-control" name="user[firstname]"placeholder="First name">
               </div>
               <div class="col">
               <input type="text" class="form-control"  name="user[lastname]"placeholder="Last name">
               </div>
            </div>
               <h3>Travel</h3>
               <div class="form-row">
                 <div class="col">
                 <input type="text" class="form-control"name="user[travelfrom]" placeholder="From">
                 </div>
                 <div class="col">
                 <input type="text" class="form-control" name="user[travelto]" placeholder="To">
                 </div>
              </div>
               <h3>Date</h3>
               <div class="form-row">
                 <div class="col">
                 <input type="text" class="datepicker" name="user[datefrom]" placeholder="From">
                 </div>
                 <div class="col">
                 <input type="text" class="datepicker" name="user[dateto]" placeholder="To">
                 </div>
              </div>
               <h3>No of People</h3>
               <div class="form-row">
                 <div class="col">
                 <input type="text" class="form-control"  name="user[adults]" placeholder="Adults">
                 </div>
                 <div class="col">
                 <input type="text" class="form-control" name="user[children]" placeholder="Children Below 8yrs">
                 </div>
              </div>
               <h3> Phone Number</h3>
                 <div class="form-group">
                     <input class="form-control" type="text" name="user[phoneno]" placeholder="name">
                 </div>
                 <h3>Email id</h3>
                   <div class="form-group">
                       <input class="form-control validate" type="text" name="user[email]" placeholder="name">
                   </div>
               <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block">Plan My Package</button>
               </div>
           </form>
           <a href="/campgrounds">Go Back</a>

</div>



<script>
$('.datepicker').pickadate({
  selectMonths: true, // Creates a dropdown to control month
  selectYears: 15 // Creates a dropdown of 15 years to control year
});
</script>


